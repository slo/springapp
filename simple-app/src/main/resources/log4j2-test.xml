<?xml version="1.0" encoding="UTF-8" ?>
<Configuration status="warn">

    <Appenders>
        <Console name="STDOUT">
            <PatternLayout
                    pattern="%date{yyyy-MM-dd HH:mm:ss.SSS}|%5level|%X{CDC_MESSAGE_ID}|%thread|%logger:%method[%file:%line] %msg%n" />
        </Console>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="STDOUT" />
        </Root>
    </Loggers>
</Configuration>
